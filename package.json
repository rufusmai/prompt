{
    "name": "prompt-css",
    "description": "A CSS Framework based on Bootstrap 4",
    "version": "1.2.0",
    "version_short": "1.0",
    "keywords": [
        "css",
        "sass",
        "mobile-first",
        "responsive",
        "front-end",
        "framework",
        "web",
        "bootstrap"
    ],
    "homepage": "https://prompt.rufusmaiwald.de/",
    "author": "Rufus Maiwald",
    "scripts": {
        "css": "npm-run-all css-compile css-minify",
        "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/ -o dist/",
        "css-lint": "stylelint \"scss/**/*.scss\" --cache --cache-location .cache/.stylelintcache",
        "css-minify": "cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output dist/prompt.min.css dist/prompt.css"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rufusmaiwald/prompt.git"
    },
    "license": "MIT",
    "dependencies": {
        "bootstrap": "^4.3.1"
    },
    "devDependencies": {
        "clean-css-cli": "^4.3.0",
        "node-sass": "^4.12.0",
        "npm-run-all": "^4.1.5",
        "stylelint": "^10.1.0"
    }
}
