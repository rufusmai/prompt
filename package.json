{
    "name": "prompt-css",
    "description": "A CSS Framework based on Bootstrap 4",
    "version": "1.3.2",
    "version_short": "1.0",
    "keywords": [
        "css",
        "sass",
        "mobile-first",
        "responsive",
        "front-end",
        "framework",
        "web",
        "bootstrap"
    ],
    "homepage": "https://prompt.rufusmaiwald.de/",
    "author": "Rufus Maiwald",
    "scripts": {
        "dev": "node-sass --importer node_modules/node-sass-package-importer/dist/cli.js --source-map true scss/prompt.scss --source-map-contents true --precision 6 -o dist/",
        "watch": "chokidar \"scss/**/*.scss\" -c \"npm run dev\"",
        "prod": "npm-run-all css-compile css-minify",
        "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/prompt.scss -o dist/",
        "css-lint": "stylelint \"scss/**/*.scss\" --cache --cache-location .cache/.stylelintcache",
        "css-minify": "cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output dist/prompt.min.css dist/prompt.css"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rufusmaiwald/prompt.git"
    },
    "license": "MIT",
    "dependencies": {
        "bootstrap": "^4.4.1"
    },
    "devDependencies": {
        "autoprefixer": "^9.7.5",
        "chokidar-cli": "^2.1.0",
        "clean-css-cli": "^4.3.0",
        "node-sass": "^4.13.1",
        "node-sass-chokidar": "^1.4.0",
        "node-sass-package-importer": "^5.3.2",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^7.1.0",
        "stylelint": "^13.2.1"
    }
}
